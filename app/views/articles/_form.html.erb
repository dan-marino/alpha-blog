<%= form_with model: @article, local: true, class: 'form-group' do |f| %>
<p>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title, class: "form-control"%>
</p>
<p>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description, class: "form-control" %>
</p>

<p>
  <%= f.submit class: "btn btn-primary" %>
</p>
<% end %>
