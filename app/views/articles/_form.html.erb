<%= form_with model: @article, local: true, class: 'form-group' do |f| %>
<p>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title, class: "form-control"%>
</p>
<p>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description, class: "form-control" %>
</p>
<p>
  <%= f.label :category %>
  <br>
  <%= f.collection_select(:category_ids, Category.all, :id, :name,
  {prompt: 'Make your selection from the list below (can be empty)'}, {multiple: true, class: "custom-select"}) %>
</p>

<p>
  <%= f.submit class: "btn btn-primary" %>
</p>
<% end %>
