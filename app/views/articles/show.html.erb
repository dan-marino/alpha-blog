<div class="container">
  <h1>Articles</h1>

  <p><em>By: <%= @article.user.username %></em></p>
  <p>
    <strong>Title:
    </strong><%= @article.title %></p>
  <p>
    <strong>Description:
    </strong><%= @article.description %>
  </p>

  <% if logged_in? && @article.user == current_user %>
    <%= link_to "Edit", edit_article_path, class: "btn btn-info" %>
  <% end %>

    <%= link_to "Back", articles_path, class: "btn btn-info" %>
</div>
